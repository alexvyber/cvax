{
  "private": true,
  "scripts": {
    "docs": "pnpm run --filter docs dev",
    "build": "pnpm run --filter './packages/*' build",
    "dev": "pnpm run -r --parallel dev",
    "lint": "run-p lint:*",
    "lint-staged": "lint-staged --config .config/lint-staged.config.mjs",
    "lint:script": "pnpm run -r --parallel lint",
    "lint:deps": "syncpack list-mismatches --config .config/.syncpackrc",
    "lint:format": "pnpm run prettier -- --check .",
    "preinstall": "npx only-allow pnpm && corepack enable",
    "prettier": "prettier --ignore-unknown --no-error-on-unmatched-pattern",
    "test": "pnpm run -r --parallel test",
    "tsc": "pnpm run -r --parallel tsc"
  },
  "devDependencies": {
    "if-env": "1.0.4",
    "lint-staged": "13.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "prettier-plugin-astro": "0.8.0",
    "prettier-plugin-packagejson": "2.4.3",
    "prettier-plugin-tailwindcss": "0.2.3",
    "syncpack": "9.8.4"
  }
}
