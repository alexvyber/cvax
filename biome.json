{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "ignore": [".next", "build", ".cache", "dist", "node_modules"]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    }
  }
}
