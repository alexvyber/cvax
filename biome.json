{
  "$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": [".next", "build", ".cache", "some-*", "node_modules"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded"
    }
  }
}
